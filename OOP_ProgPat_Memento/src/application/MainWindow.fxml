<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainWindowController">
   <children>
      <TextArea fx:id="txtAreaText" layoutX="24.0" layoutY="62.0" prefHeight="200.0" prefWidth="355.0" />
      <AnchorPane layoutX="24.0" layoutY="271.0" prefHeight="40.0" prefWidth="355.0">
         <children>
            <Button fx:id="btnSave" layoutX="6.0" layoutY="8.0" mnemonicParsing="false" onAction="#saveText" text="Save text" />
            <Button fx:id="btnUndo" layoutX="240.0" layoutY="8.0" mnemonicParsing="false" onAction="#undoText" text="Undo" />
            <Button fx:id="btnRedo" layoutX="294.0" layoutY="8.0" mnemonicParsing="false" onAction="#redoText" text="Redo" />
            <Button layoutX="85.0" layoutY="8.0" mnemonicParsing="false" onAction="#removeText" text="Remove saved text" />
         </children>
      </AnchorPane>
      <Label layoutX="14.0" layoutY="25.0" text="Simple TextEditor based on Memento Design Pattern">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
