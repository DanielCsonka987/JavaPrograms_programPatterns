<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainWindowController">
   <left>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="txtAreaMessage" layoutX="17.0" layoutY="31.0" prefHeight="112.0" prefWidth="167.0" />
            <Label layoutX="17.0" layoutY="14.0" text="Message area" />
            <Button fx:id="btnSendMessage" layoutX="17.0" layoutY="154.0" mnemonicParsing="false" onAction="#sendingTheMessage" text="Send" />
         </children>
      </AnchorPane>
   </left>
   <top>
      <AnchorPane prefHeight="50.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="88.0" layoutY="15.0" text="Messanger based on Singleton Desing Pattern">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </top>
   <right>
      <ListView fx:id="lstViewMessages" prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
