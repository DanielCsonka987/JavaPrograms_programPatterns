<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="application.MainWindowController">
   <top>
      <AnchorPane prefHeight="70.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="24.0" layoutY="25.0" text="GateControl based on State Design Pattern">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </top>
   <center>
      <AnchorPane prefHeight="199.0" prefWidth="350.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnPay" layoutX="31.0" layoutY="126.0" mnemonicParsing="false" onAction="#payTheFee" text="Pay the fee" />
            <Button fx:id="btnEnter" layoutX="210.0" layoutY="126.0" mnemonicParsing="false" onAction="#enterTheGate" text="Enter" />
            <TextField fx:id="txtBxFee" layoutX="29.0" layoutY="67.0" prefHeight="25.0" prefWidth="80.0" />
            <Label layoutX="29.0" layoutY="28.0" text="Payed amount" />
            <Label layoutX="186.0" layoutY="28.0" text="State of the gate:" />
            <Label fx:id="lblResult" layoutX="191.0" layoutY="69.0">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label layoutX="31.0" layoutY="168.0" text="(100 or more is needed)" />
            <Label fx:id="lblPaymentStatus" layoutX="31.0" layoutY="100.0" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
